<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">
    <LinearLayout
        android:id="@+id/news_index_text_linearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/news_index_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/up_author_str"
                android:text="@string/new_index_author_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"/>
            <TextView
                android:id="@+id/up_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/up_author_str"/>
            <TextView
                android:id="@+id/glance_times_str"
                android:text="@string/new_index_glance_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/up_author"
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/glance_times"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/glance_times_str"/>
            <TextView
                android:id="@+id/update_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"/>
            <TextView
                android:id="@+id/update_time_str"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/new_index_date_str"
                android:layout_toLeftOf="@id/update_time"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/news_index_item_introduce"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <com.vee.lb.vee.view.AutoFitGridView
        android:id="@+id/news_index_item_pic_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="3"
        android:columnWidth="80dp"
        android:horizontalSpacing="@dimen/bangumi_fin_gridview_Spacing"
        android:verticalSpacing="@dimen/bangumi_fin_gridview_Spacing"
        android:layout_marginLeft="@dimen/bangumi_fin_margin"
        android:layout_marginRight="@dimen/bangumi_fin_margin"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/news_index_item_gridview_double_default_margin"
        android:background="@color/default_border_color"/>
</LinearLayout>