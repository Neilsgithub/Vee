<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/vee_scrolling_intro_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/vee_scrolling_intro_intro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <GridView
        android:id="@+id/vee_scrolling_intro_episode_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="6"
        android:columnWidth="30dp"
        android:horizontalSpacing="@dimen/bangumi_fin_gridview_Spacing"
        android:verticalSpacing="@dimen/bangumi_fin_gridview_Spacing"
        android:layout_marginLeft="@dimen/bangumi_fin_margin"
        android:layout_marginRight="@dimen/bangumi_fin_margin"/>

</LinearLayout>
