<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/bangumi_fin_default_margin"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/bangumi_fin_default_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/bangumi_fin_tag_name"
            android:textSize="@dimen/bangumi_fin_default_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/bangumi_fin_default_margin"/>

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/bangumi_fin_more"
            android:text="more"
            android:textSize="@dimen/bangumi_fin_default_textsize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/bangumi_fin_default_margin"/>
    </LinearLayout>

    <com.vee.lb.vee.view.AutoFitGridView
        android:id="@+id/bangumi_fin_gridview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="2"
        android:columnWidth="80dp"
        android:horizontalSpacing="@dimen/bangumi_fin_gridview_Spacing"
        android:verticalSpacing="@dimen/bangumi_fin_gridview_Spacing"
        android:layout_marginLeft="@dimen/bangumi_fin_margin"
        android:layout_marginRight="@dimen/bangumi_fin_margin"/>
</LinearLayout>
