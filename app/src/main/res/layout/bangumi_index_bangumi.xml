<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/bangumi_index_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginLeft="@dimen/bangumi_index_leftmargin"
    android:layout_marginRight="@dimen/bangumi_index_leftmargin"
    android:layout_marginTop="@dimen/bangumi_index_topmargin"
    android:layout_marginBottom="@dimen/bangumi_index_topmargin"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/bangumi_index_bangumi_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bangumi_index_text_size"
        android:textColor="@color/defalut_text_color"/>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:id="@+id/bangumi_index_bangumi_episodes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/bangumi_index_text_size"
        android:textColor="@color/defalut_text_color"/>

</LinearLayout>
